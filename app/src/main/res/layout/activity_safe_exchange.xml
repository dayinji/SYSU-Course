<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/qianbai"
    tools:context="com.badprinter.sysu_course.activity.SafeExchange">
    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/lanse">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/huanke"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"/>

    </RelativeLayout>


    <com.badprinter.sysu_course.customview.MyViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@color/qianbai">

    </com.badprinter.sysu_course.customview.MyViewPager>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/geikeBt"
                android:text="我要给课"
                android:background="@drawable/round_bg_shenlan"
                style="@style/MyButton"
                android:textSize="@dimen/font_big"
                android:padding="15dp"/>
            <Button
                android:id="@+id/qukeBt"
                android:text="我要取课"
                android:background="@drawable/round_bt"
                style="@style/MyButton"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/font_big"
                android:padding="15dp"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:text="最大限度降低换课风险 / 但不是绝对安全"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/font_small"
        android:textColor="@color/qianhui"/>

</LinearLayout>
