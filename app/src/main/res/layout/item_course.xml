<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/qianbai">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/name"
                android:textColor="@color/shenlan"
                android:textSize="@dimen/font_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/teacher"
                android:textSize="@dimen/font_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/credit"
            style="@style/MarkStyle"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_bg_lanse"/>
        <TextView
            android:id="@+id/like"
            style="@style/MarkStyle"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/credit"
            android:text="关"
            android:background="@drawable/round_bg_lanse"/>
        <TextView
            android:id="@+id/listen"
            style="@style/MarkStyle"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/like"
            android:text="监"
            android:background="@drawable/round_bg_qianhong"/>

    </RelativeLayout>
</LinearLayout>